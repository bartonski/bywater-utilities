lastmarkdown() {
    ls -1t  "$HOME/Documents/markdown/todo"$(yesterdts)* | tail -1
}

selectmarkdown () {
    sed '1,/# Today/d; /<table>/,$d'  $(lastmarkdown) | xsel
}

