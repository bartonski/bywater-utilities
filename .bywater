# Daily wrap
dw() {
    checkdir "$EMPLOYER_PATH/daynotes/"
    local notefile="$EMPLOYER_PATH/daynotes/$(date +%Y%m%d).note.txt"
    echo "Daily Wrap-up ( $( date +'%a %b %d, %Y') )"
    sed -n '1,/^---- 1/p' $notefile
